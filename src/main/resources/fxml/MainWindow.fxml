<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="656.0" prefWidth="1306.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar HBox.hgrow="ALWAYS">
        <menus>
          <Menu mnemonicParsing="false" text="Проект">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#newProjectMenuItemHandle" text="Создать" />
                  <MenuItem mnemonicParsing="false" onAction="#openProjectMenuItemHandle" text="Открыть" />
                  <MenuItem mnemonicParsing="false" onAction="#saveProjectMenuItemHandle" text="Сохранить" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#exitMenuItemHandle" text="Выход" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <tabs>
          <Tab text="ЗАДАЧИ">
               <content>
                  <VBox>
                     <children>
                        <SplitPane fx:id="taskSplitPane" VBox.vgrow="ALWAYS">
                           <items>
                              <TreeTableView fx:id="taskTreeTableView" showRoot="false" tableMenuButtonVisible="true">
                                <columns>
                                  <TreeTableColumn fx:id="taskNameColumn" prefWidth="75.0" sortable="false" text="Наименование" />
                                  <TreeTableColumn fx:id="startDateColumn" prefWidth="75.0" sortable="false" text="Дата начала" />
                                    <TreeTableColumn fx:id="finishDateColumn" prefWidth="75.0" sortable="false" text="Дата окончания" />

                                    <TreeTableColumn fx:id="durationColumn" prefWidth="75.0" sortable="false" text="Продолжительность" visible="false" />
                                    <TreeTableColumn fx:id="donePercentColumn" prefWidth="75.0" sortable="false" text="Прогресс" visible="false" />
                                    <TreeTableColumn fx:id="priorityColumn" prefWidth="75.0" sortable="false" text="Приоритет" visible="false" />
                                    <TreeTableColumn fx:id="costColumn" prefWidth="75.0" sortable="false" text="Стоимость" visible="false" />


                                </columns>
                                 <columnResizePolicy>
                                    <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TreeTableView>
                           </items>
                        </SplitPane>
                        <HBox VBox.vgrow="NEVER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#addNewTaskHandle" text="+" HBox.hgrow="NEVER">
                                 <tooltip>
                                    <Tooltip text="Добавить задачу" />
                                 </tooltip>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
          <Tab text="РЕСУРСЫ">
               <content>
                  <VBox>
                     <children>
                        <SplitPane fx:id="resourceSplitPane" VBox.vgrow="ALWAYS">
                           <items>
                              <TableView fx:id="resourceTableView" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                                <columns>
                                  <TableColumn fx:id="resourceNameColumn" prefWidth="150.0" sortable="false" text="Наименование" />
                                  <TableColumn fx:id="resourceTypeColumn" prefWidth="150.0" sortable="false" text="Тип" />
                                    <TableColumn fx:id="resourceEmailColumn" prefWidth="150.0" sortable="false" text="Почта" visible="false" />
                                </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                           </items>
                        </SplitPane>
                        <HBox VBox.vgrow="NEVER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#addNewResourceHandle" text="+" HBox.hgrow="NEVER">
                                 <tooltip>
                                    <Tooltip text="Добавить ресурс" />
                                 </tooltip>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content></Tab>
        </tabs>
      </TabPane>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="propertiesPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.khasang.cachoeira.view.TaskPropertiesPaneController">
   <children>
      <TitledPane text="Информация" VBox.vgrow="ALWAYS">
         <content>
            <GridPane hgap="10.0" vgap="10.0">
               <children>
                  <TextField fx:id="nameField" GridPane.columnIndex="1" />
                  <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <DatePicker fx:id="finishDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <Slider fx:id="donePercentSlider" showTickLabels="true" showTickMarks="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <ComboBox fx:id="priorityTypeComboBox" prefHeight="25.0" prefWidth="162.0" promptText="Выберите приоритет" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <TextField fx:id="costField" onKeyPressed="#onlyNumber" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  <Label fx:id="startDateLabel" text="Дата начала:" GridPane.rowIndex="1" />
                  <Label fx:id="finishDateLabel" text="Дата окончания:" GridPane.rowIndex="2" />
                  <Label fx:id="donePercentLabel" text="Прогресс (%):" GridPane.rowIndex="3" />
                  <Label fx:id="priorityTypeLabel" text="Приоритет:" GridPane.rowIndex="4" />
                  <Label fx:id="costLabel" text="Стоимость:" GridPane.rowIndex="5" />
                  <Label fx:id="nameLabel" text="Наименование:" />
               </children>
               <columnConstraints>
                  <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="223.0" minWidth="10.0" prefWidth="109.0" />
                  <ColumnConstraints hgrow="ALWAYS" maxWidth="397.0" minWidth="10.0" prefWidth="159.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
               </rowConstraints>
            </GridPane>
         </content>
      </TitledPane>
      <TitledPane text="Привязанные ресурсы" VBox.vgrow="ALWAYS">
         <content>
            <TableView fx:id="resourceTableView" prefHeight="200.0" prefWidth="200.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="resourceNameColumn" prefWidth="251.0" text="Наименование" />
                  <TableColumn fx:id="resourceCheckboxColumn" prefWidth="47.0" resizable="false" />
               </columns>
            </TableView>
         </content>
      </TitledPane>
   </children>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="propertiesPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.khasang.cachoeira.view.mainwindow.TaskPropertiesPaneController">
    <children>
        <TitledPane text="%info" VBox.vgrow="ALWAYS">
            <content>
                <GridPane hgap="10.0" prefHeight="410.0" vgap="10.0">
                    <children>
                        <TextField fx:id="nameField" GridPane.columnIndex="1" />
                        <DatePicker fx:id="startDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <DatePicker fx:id="finishDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Slider fx:id="donePercentSlider" showTickLabels="true" showTickMarks="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <ComboBox fx:id="priorityTypeComboBox" prefHeight="25.0" prefWidth="162.0" promptText="%select_priority_type" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <TextField fx:id="costField" onKeyPressed="#onlyNumber" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <TextArea fx:id="descriptionTextArea" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <Label text="%start_date" GridPane.rowIndex="1" />
                        <Label text="%finish_date" GridPane.rowIndex="2" />
                        <Label text="%done_percent" GridPane.rowIndex="3" />
                        <Label text="%priority_type" GridPane.rowIndex="4" />
                        <Label text="%cost" GridPane.rowIndex="5" />
                        <Label text="%task_name" />
                        <Label text="%description" GridPane.rowIndex="6" />
                    </children>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" maxWidth="223.0" minWidth="10.0" prefWidth="109.0" />
                        <ColumnConstraints hgrow="ALWAYS" maxWidth="397.0" minWidth="10.0" prefWidth="159.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="ALWAYS" />
                    </rowConstraints>
                </GridPane>
            </content>
        </TitledPane>
        <TitledPane text="%assigned_resources" VBox.vgrow="ALWAYS">
            <content>
                <TableView fx:id="resourceTableView" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="resourceNameColumn" maxWidth="-Infinity" minWidth="251.0" prefWidth="-1.0" text="%resource_name" />
                        <TableColumn fx:id="resourceCheckboxColumn" prefWidth="47.0" resizable="false" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </content>
        </TitledPane>
        <TitledPane prefHeight="200.0" prefWidth="200.0" text="%dependencies">
            <content>
                <TableView fx:id="parentTaskTableView" prefHeight="200.0" prefWidth="200.0">
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <columns>
                  <TableColumn fx:id="parentTaskNameColumn" prefWidth="75.0" text="%task_name" />
                  <TableColumn fx:id="parentTaskDependencyTypeColumn" prefWidth="75.0" text="%dependency_type" />
               </columns>
                </TableView>
            </content>
        </TitledPane>
    </children>
</VBox>
